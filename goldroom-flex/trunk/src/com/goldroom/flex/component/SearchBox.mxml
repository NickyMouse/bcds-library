<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="222" height="42">

	<fx:Script>
		<![CDATA[
			import  com.goldroom.flex.home.Home;
			protected function searchBtn_clickHandler(event:MouseEvent):void
			{
				if(searchInput.text.length > 0){
					Home.getHome().searchBook(searchInput.text);
				} else {
					searchBtn.errorString = "请输入搜索关键词";
				}
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:TextInput x="10" y="11" id="searchInput"/>
	<s:Button x="142" y="11" label="搜索" id="searchBtn" click="searchBtn_clickHandler(event)"/>
</s:Group>
