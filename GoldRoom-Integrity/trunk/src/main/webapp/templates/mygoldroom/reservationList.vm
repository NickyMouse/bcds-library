<HTML xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>黄金屋</title>
<meta content="text/html; charset=utf-8" http-equiv="Content-Type"/>
<meta content="no-cache" http-equiv="Pragma"/>
<meta content="Sun, 6 Mar 2005 01:00:00 GMT" http-equiv="Expires"/>
<meta name="description" content="来黄金屋，收获更多。">

<link rel="shortcut icon" type=image/x-icon href="http://t.douban.com/favicon.ico"/>
<link rel=stylesheet type=text/css href="/static/css/packed_douban243.css"/>
<link rel=stylesheet type=text/css href="/static/css/packed__all68.css"/>

<link rel=stylesheet type=text/css href="/static/css/mygoldroom.css" />

<script type='text/javascript' src='/dwr/interface/MemberService.js'></script>

<script type='text/javascript' src='/dwr/engine.js'></script>
<script type=text/javascript src="/static/js/jquery-1.4.2.min.js"></script>
<script type='text/javascript'>
    var showContact = function(data)
    {
     	if (data != null && typeof data == 'object'){
			var str = "name:" + data.name + "\n";
			str += "workId:" + data.workId + "\n";
			str += "loginId:" + data.loginId + "\n";
			str += "email:" + data.email + "\n";
			str += "aliTalkId:" + data.aliTalkId + "\n";
			str += "location:" + data.location+ "\n";
			str += "ext:" + data.ext+ "\n";
			str += "score:" + data.score+ "\n";
			alert(str);
		}
    }

</script>
</head>
<body>
	#parse("templates/common/header.vm")

	<DIV id="wrapper">
		#parse("templates/common/searchbar.vm")
		<!-- content start here-->
		<DIV id=content>
            <h1>我的黄金屋</h1>
       		<div id="leftMenu" class="leftMenu">
				#set($menuIndex=2)
				#parse("templates/mygoldroom/menu.vm")
       		</div>
        	<div id="right" class="rightContent">
				<div>
				<a href="/mygoldroom/reservationListAction.action?state=all&loginId=gangyi.xiaogy" #if($state=="all") class="seledtedState" #else class="state" #end>
							全部 #if($state=="all")($!{reservationResult.totalCount})#end</a>
				<a href="/mygoldroom/reservationListAction.action?state=toBeConfirm&loginId=gangyi.xiaogy" #if($state=="toBeConfirm") class="seledtedState" #else class="state" #end>
							等待确认 #if($state=="toBeConfirm")($!{reservationResult.totalCount})#end</a>
				<a href="/mygoldroom/reservationListAction.action?state=reject&loginId=gangyi.xiaogy" #if($state=="reject") class="seledtedState" #else class="state" #end>
							被拒绝 #if($state=="reject")($!{reservationResult.totalCount})#end</a>
				</div>
            	#set($reservationList = $reservationResult.reservationList)
				#if($reservationResult && $reservationResult.totalCount > 0)
                	#foreach($reservation in $reservationList)
    					#set($item = $reservation.bookItem)

    					<div class="bookItem">
    						<div class="bookImage">
    							##<img src="$item.bookInfo.imgUrl"/>
    							<img src="http://img3.douban.com/mpic/s4478937.jpg" />
    						</div>
    						<div class="bookInfo">
        						<h2 class="title"> $!item.bookInfo.name </h2>
                                <span>作者: </span> $!item.bookInfo.author  <br/>
        						<span>出版社: </span> $!item.bookInfo.publisher  <br/>
        						<span>ISBN: </span> $!item.bookInfo.isbn  <br/>
    						</div>
							<div class="column3">
								 <input type="hidden" id="bookItem${item.id}" value="$!item.owner.loginId"/>

								 <span>拥有者: </span> <a href="javascript:MemberService.findMemberByLoginId(document.getElementById('bookItem$!{item.id}').value, showContact);">$!{item.owner.name}</a>  <br/>
								 <span>开始时间: </span> $reservation.lendTime  <br/>
								 <span>结束时间: </span> $reservation.returnTime <br/>
								 #if($reservation.state == "reject")
									<span>状态: </span> <span style="color:red">被拒绝 </span><br/>
									<a href="#">重新预约</a>
								 #elseif($reservation.state == "toBeConfirm")
									<span>状态: </span> <span style="color:blue">等待确认 </span> <br/>
								 #end
                            </div>
    					</div>
    					<div style="clear:both"></div>
					#end
				#else
					 <h2 style="text-align:center; margin:50px">暂无符合记录</h2>
				#end
            </div>
		</DIV>

		<!-- content end here -->
		<div style="clear:both"></div>
		#set($totalCount =$reservationResult.totalCount)
		#if($totalCount && $totalCount > 0)
			#parse("templates/common/pageTurn.vm")
		#end
		#parse("templates/common/footer.vm")
	</DIV>
	#parse("templates/common/memberInfo.vm")
</body>
</html>