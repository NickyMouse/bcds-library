<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="goldroomPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.alibaba.intl.goldroom.dataobject.BookInfo</class>
		<class>com.alibaba.intl.goldroom.dataobject.BookItem</class>
		<class>com.alibaba.intl.goldroom.dataobject.BookItemLog</class>
		<class>com.alibaba.intl.goldroom.dataobject.Category</class>
		<class>com.alibaba.intl.goldroom.dataobject.Integral</class>
		<class>com.alibaba.intl.goldroom.dataobject.Lending</class>
		<class>com.alibaba.intl.goldroom.dataobject.Member</class>
		<class>com.alibaba.intl.goldroom.dataobject.MemberLog</class>
		<class>com.alibaba.intl.goldroom.dataobject.Reservation</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/goldroom" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="root" />
			<property name="show_sql" value="true" />
			<property name="dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>