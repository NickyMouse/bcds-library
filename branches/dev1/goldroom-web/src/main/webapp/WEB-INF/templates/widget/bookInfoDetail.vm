<table>
    <tr>
        <td>
		#if(${bookInfo.imgUrl} && !$bookInfo.getImgUrl().equals(""))
			<div><img class="bookImage" src="$UPLOAD_IMAGE_PATH/$!{bookInfo.imgUrl}" /></div>
		#else
			<div><img class="bookImage" src="$SERVER_NAME/images/noPhoto.png" /></div>
		#end
        </td>
        <td>
            <table >
                <tr >
                    <td >NAME
                    </td>
                    <td >$!{bookInfo.name}
                    </td>
                </tr>
				<tr >
                    <td >Category
                    </td>
                    <td >$!categoryCache.getFullName($!{bookInfo.categoryId},">>")
                    </td>
                </tr>
                <tr>
                    <td>AUTHOR</td>
                    <td >
                        $!{bookInfo.author}</td>
                </tr>
                <tr >
                    <td >isbn
                    </td>
                    <td >$!{bookInfo.isbn}
                    </td>
                </tr>
                <tr >
                    <td >DESCRIPTION
                    </td>
                    <td >$!{bookInfo.description}
                    </td>
                </tr>
                <tr >
                    <td >PUBLISHER
                    </td>
                    <td >$!{bookInfo.publisher}
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
