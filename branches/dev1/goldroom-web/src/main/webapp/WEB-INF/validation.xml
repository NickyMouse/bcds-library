<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

	<formset>

		<form name="user">
			<field property="username" depends="required">
				<arg0 key="username" resource="false" />
				<msg key="username.required" name="username.required" />
			</field>
			<field property="age" depends="required,integer">
				<msg key="age.required" name="age.required" />
				<arg0 key="age" resource="false" />
			</field>
		</form>

		<form name="bookInfo">
			<field property="name" depends="required">
				<arg0 key="username" resource="false" />
				<msg key="username.required" name="username.required" />
			</field>
			<field property="author" depends="required">
				<msg key="age.required" name="age.required" />
				<arg0 key="age" resource="false" />
			</field>
			<field property="categoryName" depends="required">
				<msg key="age.required" name="age.required" />
				<arg0 key="age" resource="false" />
			</field>
			<field property="description" depends="required">
				<msg key="age.required" name="age.required" />
				<arg0 key="age" resource="false" />
			</field>
			<field property="publisher" depends="required">
				<msg key="age.required" name="age.required" />
				<arg0 key="age" resource="false" />
			</field>
		</form>

		<form name="member">
			<field property="name" depends="required">				
			</field>
		</form>

	</formset>

</form-validation>
