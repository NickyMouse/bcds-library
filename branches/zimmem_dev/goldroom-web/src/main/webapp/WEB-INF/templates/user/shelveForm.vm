	function checkAndUpload(){
		var filepath=document.getElementById("file").value
		filepath = filepath.substring(filepath.lastIndexOf('.')+1,filepath.length);
		
		if(filepath != 'jpg' && filepath != 'gif'){
			alert("只能上传JPG或GIF格式的图片");
		}else{
			uploadFile();
		}
	}
